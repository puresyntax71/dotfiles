{
  "languageserver": {
    "dls": {
      "command": "diagnostic-languageserver",
      "args": ["--stdio"],
      "filetypes": ["php"],
      "initializationOptions": {
        "linters": {
          "phpcs": {
            "command": "phpcs",
            "debounce": 100,
            "rootPatterns": ["composer.json", "composer.lock", "vendor", ".git"],
            "args": ["--standard=Drupal,DrupalPractice", "--report=emacs", "-s", "-"],
            "offsetLine": 0,
            "offsetColumn": 0,
            "sourceName": "phpcs",
            "formatLines": 1,
            "formatPattern": [
              "^.*:(\\d+):(\\d+):\\s+(.*)\\s+-\\s+(.*)$",
              {
                "line": 1,
                "column": 2,
                "message": 4,
                "security": 3
              }
            ],
            "securities": {
              "error": "error",
              "warning": "warning"
            }
          },
          "drupal-check": {
              "command": "drupal-check",
              "debounce": 100,
              "rootPatterns": [ "composer.json", "composer.lock", "vendor", ".git" ],
              "args": ["--format", "raw", "--no-progress", "%file" ],
              "offsetLine": 0,
              "offsetColumn": 0,
              "sourceName": "drupal-check",
              "formatLines": 1,
              "formatPattern": [
                  "^[^:]+:(\\d+):(.*)(\\r|\\n)*$",
                  {
                      "line": 1,
                      "message": 2,
                  },
              ],
          }
        },
        "filetypes": {
          "php": ["phpcs", "drupal-check"]
        }
      }
    }
  },
  "intelephense.files.associations": [
    "*.inc",
    "*.php",
    "*.module"
  ],
  "diagnostic.errorSign": "▬",
  "diagnostic.warningSign": "▪",
  "diagnostic.infoSign": "▪",
  "diagnostic.hintSign": "⋅",
  "suggest.enablePreview": true,
  "signature.preferShownAbove": true
}
